{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
